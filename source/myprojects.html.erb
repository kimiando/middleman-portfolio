<section id="projects">
  <div class="project-header">
    <h1>My Projects</h1>
    <button class="btn" onclick="filterProjects('All')">All</button>
    <button class="btn" onclick="filterProjects('Ruby')">Ruby</button>
    <button class="btn" onclick="filterProjects('HTML')">HTML</button>
    <button class="btn" onclick="filterProjects('JavaScript')">JavaScript</button>
  </div>
  <div class="wrapper">
    <% data.projects.each do |project| %>
      <div class="card" data-main="<%= project.main %>">
        <%= image_tag project.image, alt: "project image" %>
        <div class="card-box">
          <div class="card-proj">
            <h2 class="card-title"><%= project.name %></h2>
            <p class="card-role"><%= project.role %></p>
            <p class="techstack"><%= project.techstack %></p>
            <div class="link">
              <% link_to project.github, class: 'external-link', target: '_blank' do %>
                <i class="fa-brands fa-github"></i>
              <% end %>
              <% link_to project.url, class: 'external-link', target: '_blank' do %>
                <i class="fas fa-external-link-alt"></i>
              <% end %>
            </div>
            <p class="card-description"><%= project.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <section>
